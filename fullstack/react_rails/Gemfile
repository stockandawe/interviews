source 'https://rubygems.org'
ruby '2.2.3'

gem 'rails', '4.2.4'

# Database
gem 'sqlite3'

# Front end & asset management
gem 'jquery-ui-rails'
gem 'jquery-validation-rails'
gem 'simple_form'
gem "browserify-rails"
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 2.0'
gem 'slim-rails'
gem 'bourbon'


group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'better_errors'
  gem 'quiet_assets'
  gem 'rails_layout'
  gem 'spring-commands-rspec'
end

group :development, :test do
  gem 'pry-byebug'
end

group :test do
  gem 'rspec-rails', '~> 3.1'
  gem 'factory_girl_rails'
  gem 'ffaker'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'simplecov', :require => false
end
